<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />


    <EditText
        android:id="@+id/etForgotEmailId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:background="@drawable/back"
        android:hint="@string/email_address"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:textColor="#000000"
        android:fontFamily="@font/qbold"
        android:drawableStart="@drawable/ic_email_black_24dp"
        android:drawablePadding="30sp"
        android:paddingTop="8sp"
        android:paddingLeft="8sp"
        android:paddingRight="8sp"
        android:paddingBottom="8sp"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toStartOf="@id/guideline_right2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/guideline_left2"
        tools:layout_editor_absoluteY="261dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/backb"
        android:text="RESET PASSWORD"
        android:paddingTop="8sp"
        android:paddingLeft="8sp"
        android:paddingRight="8sp"
        android:paddingBottom="8sp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:fontFamily="@font/qbold"
        android:textAllCaps="false"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right2"
        app:layout_constraintStart_toStartOf="@+id/guideline_left2"
        app:layout_constraintTop_toBottomOf="@id/etForgotEmailId" />


</androidx.constraintlayout.widget.ConstraintLayout>